{
  "template_name": "hlwd_quote_card",
  "description": "Quote card for HLWD (How Legends Are Made) podcast. Dark navy background with gold accents, large centered quote text, and attribution.",
  "format": {
    "type": "square",
    "width": 1080,
    "height": 1080,
    "alternative_sizes": {
      "landscape": {"width": 1920, "height": 1080},
      "story": {"width": 1080, "height": 1920}
    }
  },
  "variables": {
    "quote_text": {
      "type": "string",
      "required": true,
      "example": "The only way to do great work is to love what you do."
    },
    "speaker_name": {
      "type": "string",
      "required": true,
      "example": "Steve Jobs"
    },
    "background_color": {
      "type": "color",
      "required": false,
      "default": "#0a1628"
    },
    "accent_color": {
      "type": "color",
      "required": false,
      "default": "#d4af37"
    },
    "quote_color": {
      "type": "color",
      "required": false,
      "default": "#ffffff"
    },
    "attribution_color": {
      "type": "color",
      "required": false,
      "default": "#a0a0a0"
    },
    "output_path": {
      "type": "file_path",
      "required": true,
      "example": "/Users/srinivas/Orchestrate Github/orchestrate-jarvis/exports/hlwd_quote.png"
    }
  },
  "operation_sequence": {
    "app": "photoshop",
    "operations": [
      {
        "fn": "createDocument",
        "width": "{{width}}",
        "height": "{{height}}",
        "name": "hlwd_quote_card",
        "colorMode": "RGB"
      },
      {
        "fn": "fillBackground",
        "color": "{{background_color}}"
      },
      {
        "fn": "addTextLayer",
        "text": "\u201c",
        "font": "Georgia-Bold",
        "size": 200,
        "color": "{{accent_color}}",
        "x": 100,
        "y": 200,
        "comment": "Opening quotation mark"
      },
      {
        "fn": "addTextLayer",
        "text": "\u201d",
        "font": "Georgia-Bold",
        "size": 200,
        "color": "{{accent_color}}",
        "x": 880,
        "y": 800,
        "comment": "Closing quotation mark"
      },
      {
        "fn": "addTextLayer",
        "text": "{{quote_text}}",
        "font": "Montserrat-Bold",
        "size": 48,
        "color": "{{quote_color}}",
        "x": 540,
        "y": 480,
        "alignment": "center",
        "maxWidth": 880,
        "lineHeight": 1.4,
        "comment": "Main quote text, centered"
      },
      {
        "fn": "addShapeLayer",
        "type": "rectangle",
        "params": {
          "x": 490,
          "y": 780,
          "width": 100,
          "height": 3,
          "fillColor": "{{accent_color}}"
        },
        "comment": "Gold accent line above attribution"
      },
      {
        "fn": "addTextLayer",
        "text": "\u2014 {{speaker_name}}",
        "font": "Montserrat-Regular",
        "size": 28,
        "color": "{{attribution_color}}",
        "x": 540,
        "y": 850,
        "alignment": "center",
        "comment": "Speaker attribution"
      },
      {
        "fn": "exportPNG",
        "path": "{{output_path}}"
      }
    ],
    "output": "{{output_path}}"
  },
  "example_usage": {
    "app": "photoshop",
    "operations": [
      {"fn": "createDocument", "width": 1080, "height": 1080, "name": "hlwd_quote_card", "colorMode": "RGB"},
      {"fn": "fillBackground", "color": "#0a1628"},
      {"fn": "addTextLayer", "text": "\u201c", "font": "Georgia-Bold", "size": 200, "color": "#d4af37", "x": 100, "y": 200},
      {"fn": "addTextLayer", "text": "\u201d", "font": "Georgia-Bold", "size": 200, "color": "#d4af37", "x": 880, "y": 800},
      {"fn": "addTextLayer", "text": "The only way to do great work is to love what you do.", "font": "Montserrat-Bold", "size": 48, "color": "#ffffff", "x": 540, "y": 480, "alignment": "center", "maxWidth": 880, "lineHeight": 1.4},
      {"fn": "addShapeLayer", "type": "rectangle", "params": {"x": 490, "y": 780, "width": 100, "height": 3, "fillColor": "#d4af37"}},
      {"fn": "addTextLayer", "text": "\u2014 Steve Jobs", "font": "Montserrat-Regular", "size": 28, "color": "#a0a0a0", "x": 540, "y": 850, "alignment": "center"},
      {"fn": "exportPNG", "path": "/Users/srinivas/Orchestrate Github/orchestrate-jarvis/exports/hlwd_quote.png"}
    ],
    "output": "/Users/srinivas/Orchestrate Github/orchestrate-jarvis/exports/hlwd_quote.png"
  },
  "story_variant": {
    "description": "Vertical story format for Instagram/TikTok (1080x1920)",
    "app": "photoshop",
    "operations": [
      {"fn": "createDocument", "width": 1080, "height": 1920, "name": "hlwd_quote_story", "colorMode": "RGB"},
      {"fn": "fillBackground", "color": "#0a1628"},
      {"fn": "addTextLayer", "text": "\u201c", "font": "Georgia-Bold", "size": 250, "color": "#d4af37", "x": 100, "y": 500},
      {"fn": "addTextLayer", "text": "\u201d", "font": "Georgia-Bold", "size": 250, "color": "#d4af37", "x": 880, "y": 1300},
      {"fn": "addTextLayer", "text": "{{quote_text}}", "font": "Montserrat-Bold", "size": 56, "color": "#ffffff", "x": 540, "y": 900, "alignment": "center", "maxWidth": 880, "lineHeight": 1.5},
      {"fn": "addShapeLayer", "type": "rectangle", "params": {"x": 490, "y": 1400, "width": 100, "height": 3, "fillColor": "#d4af37"}},
      {"fn": "addTextLayer", "text": "\u2014 {{speaker_name}}", "font": "Montserrat-Regular", "size": 32, "color": "#a0a0a0", "x": 540, "y": 1500, "alignment": "center"},
      {"fn": "exportPNG", "path": "{{output_path}}"}
    ]
  },
  "created_at": "2025-12-16",
  "version": "1.0"
}
